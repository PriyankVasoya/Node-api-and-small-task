<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.9.2/parsley.min.js"></script>
    <title>form</title>

    <style>
        .error {
            color: red;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .parsley-errors-list li {
            color: red;
            list-style: none;
        }
        span{
            color: red;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="col-sm-8 col-lg-8 col-xs-8 col-md-8 m-auto d-block">
        <h1 class="text-center">Form</h1>
        <form action="http://localhost:8082/send_post" class="bg-light" method="POST" data-parsley-validate="" enctype="multipart/form-data">
            <div class="form-group mt-4">
                <label> First Name<span>*</span></label>
                <input type="text" name="fname" class="form-control" id="fname" data-parsley-required> <br> <br>
                <% if(locals.errors && locals.errors.fname){ %>
                    <div class="error">
                        <%= errors.fname[0] %>
                    </div>
                    <% } %>
            </div>

            <div class="form-group">
                <label> Last Name<span>*</span></label>
                <input type="text" name="lname" class="form-control" id="lname" data-parsley-required> <br> <br>
                <% if(locals.errors && locals.errors.lname){ %>
                    <div class="error">
                        <%= errors.lname[0] %>
                    </div>
                    <% } %>
            </div>

            <div class="form-group">
                <label>Email Address<span>*</span></label>
                <input type="email" name="email" class="form-control" id="email" data-parsley-required> <br> <br>
                <% if(locals.errors && locals.errors.email){ %>
                    <div class="error">
                        <%= errors.email[0] %>
                    </div>
                    <% } %>

            </div>
            <div class="form-group">
                <label>Mobile Number<span>*</span></label>
                <input type="text" name="phone" class="form-control" id="phone" data-parsley-type="number" data-parsley-required> <br> <br>
                <% if(locals.errors && locals.errors.phone){ %>
                    <div class="error">
                        <%= errors.phone[0] %>
                    </div>
                    <% } %>

                    
                    <div class="mb-3 mt-3">
                        <label for="formFile" class="form-label">Default file input example</label>
                        <input class="form-control" type="file" accept="image/*" name="img" id="img" data-parsley-required>
                      </div>

            </div>
            <div class="form-group">
                <input type=submit id="submit" class="btn btn-primary" value="Submit">

            </div>
            
        </form>
        </div>
    </div>
    
  
</body>

</html>